{% extends 'base.html.twig' %}

{% block title %}HorseScale Booking{% endblock %}

{% block body %}
<h1>Book HorseScale Slot</h1>
<form method="post">
    <div>
        <label>Name:</label>
        <input type="text" name="name" required>
    </div>
    <div>
        <label>Date:</label>
        <input type="date" name="date" required>
    </div>
    <button type="submit">Submit</button>
</form>
{% endblock %}
